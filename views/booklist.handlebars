{{! this is for home page list of books depending on genre area}}


<body>
  
<div class="container">
  <div class="row">
    {{#each books}}
    <div class="col-md-6 col-lg-4">
      <div class="card mb-4">
        <img src="{{book_cover}}" class="card-img-top" alt="{{title}}">
        <div class="card-body">
          <h5 class="card-title"><a href="/book/{{id}}">{{title}}</a></h5>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

</body>