<body>
<div class="container">
  <div class="row">
    {{#each books}}
      <div class="col-md-4">
        <div class="card mb-4">
          <img class="card-img-top" src="{{book_cover}}" alt="{{title}}">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{synopsis}}</p>
            <a href="/book/{{id}}" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>


</body>