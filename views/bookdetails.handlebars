{{! this is for the detail page when the book is clicked}}

<div class="bookpagecont">
  
 <div>
  <div class="book-details">
    <h2>{{book.title}}</h2>
    <img src="{{book.book_cover}}" alt="{{book.title}}"></img>
    <p>synopsis: {{book.synopsis}}</p>
    <p>Author: {{book.author}}</p>
  </div>
  <h4>Reviews</h4>
  <ul>
    {{#each book.reviews}}
      <li>
        <p> {{review_text}} - by: {{user.username}}</p>
        <p>Rating: {{review_rating}}</p>
      </li>
    {{/each}}
  </ul>

    <div class="add-review">
    <h3>Add a Review:</h3>
    <form action="/review" method="POST">
      <input type="hidden" name="book_id" value="{{book.id}}">
      <textarea name="review_text" placeholder="Write your review"></textarea>
      <label for="rating">Rating:</label>
      <select name="review_rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <button type="submit">Submit Review</button>
    </form>
  </div>
</div>

</div>
